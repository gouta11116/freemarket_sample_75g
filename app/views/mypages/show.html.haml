= render "shared/header"  
.mypage-main-content
  = render 'mypages/mypage-sidebar'
  .a-right-content
    .a-right-content__block
      .a-right-content__block#back-img
      = image_tag 'mypage/user-icon.png', class:"user-icon"
      .a-right-content__block__user-name.bold #{current_user.nickname}
    .a-right-content__block
      %h4.a-right-content__block__title.middle.bold.back-silver 購入した商品
      %ul.a-right-content__block__tabs.back-gray
        %li.active
          %h4.mypage-transactions
            = link_to "取引中", root_path,class:"middle-center bold mypage-center"
        %li
          %h4
            = link_to "過去の取引", root_path,class:"middle-center bold mypage-center"
      %ul.a-right-content__block__object
        = link_to root_path do
          %li
            .a-right-content__block__object__link-box
              .a-right-content__block__object__link-box__body
                .a-right-content__block__object__link-box__body--text 【送料込】THREE シマリングリップジャム08
                .a-right-content__block__object__link-box__body__detail.middle
                  .a-right-content__block__object__link-box__body__detail--count-box
                    %i.fa.fa-heart-o
                    .like-count 7
                  .a-right-content__block__object__link-box__body__detail--count-box
                    %i.fa.fa-comment-o
                    .comment-count 3
                  .status-blue 出品中
              %i.fa.fa-angle-right.fa-2x
        = link_to root_path do
          %li
            .a-right-content__block__object__link-box
              .a-right-content__block__object__link-box__body
                .a-right-content__block__object__link-box__body--text 【新品】THREE シマリンググローデュオ01
                .a-right-content__block__object__link-box__body__detail.middle
                  .a-right-content__block__object__link-box__body__detail--count-box
                    %i.fa.fa-heart-o
                    .like-count 12
                  .a-right-content__block__object__link-box__body__detail--count-box
                    %i.fa.fa-comment-o
                    .comment-count 5
                  .status-blue 出品中
              %i.fa.fa-angle-right.fa-2x
        = link_to root_path do
          %li
            .a-right-content__block__object__link-box
              .a-right-content__block__object__link-box__body
                .a-right-content__block__object__link-box__body--text 「THREE シマリングリップジャム05」を購入しました。取引が完了しました。
                .a-right-content__block__object__link-box__body__detail.middle
                  .a-right-content__block__object__link-box__body__detail--count-box
                    %i.fa.fa-heart-o
                    .like-count 5
                  .a-right-content__block__object__link-box__body__detail--count-box
                    %i.fa.fa-comment-o
                    .comment-count 7
                  .status-gray 取引完了
              %i.fa.fa-angle-right.fa-2x
        = link_to root_path do
          %li
            .a-right-content__block__object__link-box
              .a-right-content__block__object__link-box__body
                .a-right-content__block__object__link-box__body--text 【新品・未使用】THREE シマリングリップジャム08
                .a-right-content__block__object__link-box__body__detail.middle
                  .a-right-content__block__object__link-box__body__detail--count-box
                    %i.fa.fa-heart-o
                    .like-count 10
                  .a-right-content__block__object__link-box__body__detail--count-box
                    %i.fa.fa-comment-o
                    .comment-count 8
                  .status-red 公開停止中
              %i.fa.fa-angle-right.fa-2x
        = link_to root_path do
          %li
            .a-right-content__block__object__link-box
              .a-right-content__block__object__link-box__body
                .a-right-content__block__object__link-box__body--text 【新品・送料込み】THREE シマリングリップジャム08
                .a-right-content__block__object__link-box__body__detail.middle ¥1,500
              %i.fa.fa-angle-right.fa-2x