= render "shared/header" 

.confirm-complete
  .confirm-box
    .confirm-box__message
      .message_question
        購入を確定しますか？
    .confirm-box__image
      - @product.images.each do |image|
        = image_tag ("#{image.src}"),class:"product__image" 
    .confirm-box__name
      .name__confirm-name
        = @product.name
    .confirm-box__price
      .price__confirm-price
        = "￥#{@product.price.to_s}"
        (税込)
    .confirm-box__purchase
      .purchase__confirm-btn

  
  = render "/shared/sub_footer"